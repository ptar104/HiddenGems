<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_gem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.capstone.petros.hiddengems.AddGemActivity"
    android:baselineAligned="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:background="#FF34CFF8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Add New Gem"
            android:textSize="40dp"
            android:textColor="#FFFFFFFF" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:scaleX="-1"
            app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/addGemBackButton"
            android:background="@android:color/transparent" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="#FFE6FAFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="187dp">

            <ImageView
                app:srcCompat="@drawable/pizza1"
                android:layout_marginLeft="56dp"
                android:layout_marginStart="56dp"
                android:scaleType="center"
                android:id="@+id/imageView4"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                app:srcCompat="@drawable/pizza2"
                android:scaleType="center"
                android:id="@+id/imageView3"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:layout_alignTop="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:weightSum="1">

            <TextView
                android:text="What is the name of the gem?"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/textView2"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/addGemName"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="30dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="0.58"
                android:layout_marginTop="0dp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_weight="3"
            android:weightSum="1">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="59dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:orientation="vertical"
                    android:background="#FFFFFFFF"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:text="What type of gem is this?"
                        android:textColor="#FF000000"
                        android:gravity="center"
                        android:textAlignment="viewStart"
                        android:textStyle="normal|bold"
                        android:layout_marginLeft="5dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:text="Restaurant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/restaurantCheck"
                            android:textColor="?attr/colorButtonNormal"
                            app:buttonTint="?attr/colorButtonNormal"
                            android:layout_weight="0.05" />

                        <CheckBox
                            android:text="Historic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/historicCheck"
                            android:textColor="?attr/colorButtonNormal"
                            app:buttonTint="?attr/colorButtonNormal"
                            android:layout_weight="0.04" />

                        <CheckBox
                            android:text="Entertainment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/entertainmentCheck"
                            android:textColor="?attr/colorButtonNormal"
                            app:buttonTint="?attr/colorButtonNormal" />

                        <CheckBox
                            android:text="Other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/otherCheck"
                            android:textColor="?attr/colorButtonNormal"
                            app:buttonTint="?attr/colorButtonNormal"
                            android:layout_weight="0.05" />

                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:background="@android:color/background_light"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Write a description..."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/addGemDescription"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.38" />

            <Button
                android:text="SUBMIT GEM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submitGemButton"
                android:textAlignment="center" />
        </LinearLayout>



    </LinearLayout>
</LinearLayout>
