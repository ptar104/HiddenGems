<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_gem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.capstone.petros.hiddengems.AddGemActivity"
    android:baselineAligned="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:background="#FF34CFF8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Leave A Review"
            android:textColor="#FFFFFFFF"
            android:textSize="24dp"
            android:id="@+id/textViewGemTitle" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:scaleX="-1"
            app:srcCompat="@drawable/back"
            android:id="@+id/addGemBackButton"
            android:background="@android:color/transparent"
            android:rotation="180" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="#FFE6FAFF"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="0.30">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="0.4">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center_vertical">

                    <ImageButton
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/gem1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:id="@+id/gemRating1" />

                    <ImageButton
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/yellowcircle"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:id="@+id/gemCircle1"
                        android:visibility="gone"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center_vertical">

                    <ImageButton
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/gem2"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:id="@+id/gemRating2" />

                    <ImageButton
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/yellowcircle"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:id="@+id/gemCircle2"
                        android:visibility="gone"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center_vertical">

                    <ImageButton
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/gem3"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:id="@+id/gemRating3" />

                    <ImageButton
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/yellowcircle"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:id="@+id/gemCircle3"
                        android:visibility="gone"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center_vertical">

                    <ImageButton
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/gem4"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:id="@+id/gemRating4" />

                    <ImageButton
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/yellowcircle"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:id="@+id/gemCircle4"
                        android:visibility="gone"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center_vertical">

                    <ImageButton
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/gem5"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:id="@+id/gemRating5" />

                    <ImageButton
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/yellowcircle"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:id="@+id/gemCircle5"
                        android:visibility="gone"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.30"
                android:orientation="horizontal">


                <TextView
                    android:text="Poor"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:id="@+id/textViewGemTitle" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2" />

                <TextView
                    android:text="A real gem!"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:id="@+id/textView2" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="vertical">

            <TextView
                android:text="Write a few words!"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />

            <EditText
                android:hint="(This is optional... feel free to just submit a gems rating alone!)"
                android:textColorHint="#55000000"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="25dp"
                android:inputType=""
                android:id="@+id/userReview"
                android:gravity="top|left"
                android:layout_weight="3.59"
                android:layout_marginRight="15dp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".17">

            <Button
                android:text="Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="15dp"
                android:id="@+id/submitReviewButton" />

        </RelativeLayout>



    </LinearLayout>
</LinearLayout>
