<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_gem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.capstone.petros.hiddengems.AddGemActivity"
    android:baselineAligned="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:background="#FF34CFF8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Leave A Review"
            android:textSize="40dp"
            android:textColor="#FFFFFFFF" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:scaleX="-1"
            app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/addGemBackButton"
            android:background="@android:color/transparent" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="#FFE6FAFF"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:layout_weight="0.36">


            <ImageButton
                android:background="@null"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/gem3"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/gemRating3" />

            <ImageButton
                android:background="@null"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/gem4"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/gemRating3"
                android:layout_toEndOf="@+id/gemRating3"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:id="@+id/gemRating4" />

            <ImageButton
                android:background="@null"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/gem5"
                android:id="@+id/gemRating5"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/gemRating3"
                android:layout_toEndOf="@+id/gemRating3"
                android:layout_marginLeft="90dp"
                android:layout_marginStart="90dp" />

            <TextView
                android:text="A real gem!"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/textView2"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignLeft="@+id/gemRating5"
                android:layout_alignStart="@+id/gemRating5"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp" />

            <ImageButton
                android:background="@null"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/gem2"
                android:id="@+id/gemRating2"
                android:layout_alignTop="@+id/gemRating3"
                android:layout_toLeftOf="@+id/gemRating3"
                android:layout_toStartOf="@+id/gemRating3"
                android:layout_marginRight="14dp"
                android:layout_marginEnd="14dp" />

            <TextView
                android:text="Poor"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="2dp"
                android:id="@+id/textView"
                android:layout_below="@+id/gemRating1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="19dp" />

            <ImageButton
                android:background="@null"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/gem1"
                android:id="@+id/gemRating1"
                android:layout_alignTop="@+id/gemRating2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />

        </RelativeLayout>

        <TextView
            android:text="Write a few words!"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="25dp"
            android:inputType=""
            android:id="@+id/userReview"
            android:gravity="top|left"
            android:layout_weight="3.59"
            android:layout_marginRight="15dp" />

        <Button
            android:text="Submit"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:id="@+id/submitReviewButton" />


    </LinearLayout>
</LinearLayout>
